    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-ci": "^0.1.1",
    "jest-cli": "^26.4.2",
    "lint-staged": "^10.4.0",
    "postcss": "^8.1.0"
  },
  "peerDependencies": {
    "postcss": "^8.1.0"
  },
  "husky": {
